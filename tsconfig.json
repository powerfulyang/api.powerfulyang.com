{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "rootDirs": ["src", "libs"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "api/telegram-bot": ["libs/telegram-bot/src"],
      "api/telegram-bot/*": ["libs/telegram-bot/src/*"],
      "api/instagram-bot": ["libs/instagram-bot/src"],
      "api/instagram-bot/*": ["libs/instagram-bot/src/*"],
      "api/pinterest-bot": ["libs/pinterest-bot/src"],
      "api/pinterest-bot/*": ["libs/pinterest-bot/src/*"],
      "api/pixiv-bot": ["libs/pixiv-bot/src"],
      "api/pixiv-bot/*": ["libs/pixiv-bot/src/*"],
      "@/*": ["src/*"],
      "app/github-webhook": ["libs/github-webhook/src"],
      "app/github-webhook/*": ["libs/github-webhook/src/*"],
      "api/tencent-cloud-cos": ["libs/tencent-cloud-cos/src"],
      "api/tencent-cloud-cos/*": ["libs/tencent-cloud-cos/src/*"],
      "api/proxy-fetch": ["libs/proxy-fetch/src"],
      "api/proxy-fetch/*": ["libs/proxy-fetch/src/*"],
      "api/udp-server": ["libs/udp-server/src"],
      "api/udp-server/*": ["libs/udp-server/src/*"]
    },
    "allowJs": false
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src/**/*.ts",
    "__test__",
    "libs/**/*.ts",
    "test",
    "addon.api/**/*.ts",
    ".eslintrc.js",
    "jest.config.js"
  ]
}
